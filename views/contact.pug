  #mainWindow.col-md-9
    #contactWindow
      h2 HOW MAY WE HELP YOU?
      |                         
      .formWrapper.row
        .col-md-6
          form(action='', method='POST', role='form')
            .form-group
              label(for='') Name / Company
              |                                         
              input.form-control(type='text', id='', placeholder='')
              |                                         
              label(for='') Email
              |                                         
              input.form-control(type='email', id='', placeholder='')
              |                                         
              label(for='') Message
              |                                         
              textarea#textArea(data-pg-name='message', style='width: 100%')
            |                                     
            button.btn.btn-lg.myBtn(type='submit') Submit
        // end div col-md-6
        .col-md-6.contactMethodWrapper
          .contactMethod
            img(src='assets/img/servicesWht.png')
            .contactMethodText Chat with us here
          |                                 
          .contactMethod
            img(src='assets/img/githubWht.png')
            .contactMethodText Check out our GitHub
          |                                 
          .contactMethod
            img(src='assets/img/linkedinWht.png')
            .contactMethodText Connect with us on LinkedIn
          |                                 
          .contactMethod
            img(src='assets/img/twitterWht.png')
            .contactMethodText Send us a tweet on Twitter
          |                                 
          .contactMethod
            img(src='assets/img/facebook-logoWht.png')
            .contactMethodText Follow us on Facebook    
    
