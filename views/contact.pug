extends layout

block content
  .logo
    img(src='images/LogoGlasses150.png', alt='')
  // end logo
  #nav.col-md-3
    ul
      li
        a(href='/') HOME
        |                       
        img(src='images/homeWht.png', alt='')
      |                   
      li
        a(href='/apps') APPS
        |                       
        img(src='images/appsWht.png', alt='')
      |                   
      li
        a(href='/services') SERVICES
        |                       
        img(src='images/servicesWht.png', alt='')
      |                   
      li
        a(href='/about') ABOUT
